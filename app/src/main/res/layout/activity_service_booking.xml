<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Services"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1a2a6c"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Type"
            android:textColor="#1a2a6c"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spServiceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Service"
            android:textColor="#1a2a6c"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service description will appear here"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvServicePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $0.00"
            android:textColor="#1a2a6c"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etBookingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking Date (YYYY-MM-DD)"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCheckAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Available Time Slots"
            android:backgroundTint="#1a2a6c"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time Slots"
            android:textColor="#1a2a6c"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etGuests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Guests/Participants"
            android:inputType="number"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etSpecialRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Special Requests (Optional)"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: LKR 0.00"
            android:textSize="18sp"
            android:textColor="#1a2a6c"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnBookService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Service"
            android:backgroundTint="#1a2a6c"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>